{
    "compilerOptions": {
        "noImplicitAny": false,
        // ソースマップを有効化
        "sourceMap": true,
        // TSはECMAScript 5に変換
        "target": "ES2023",
        // TSのモジュールはES Modulesとして出力
        "module": "ES2015",
        // 厳密モードとして設定
        "strict": true,
        "lib": [
            "ES2023",
            "DOM"
        ],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    }
}